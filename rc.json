{
  "configure": {
    "desc": "change settings"
  },
  "list": {
    "parallelizable": "true",
    "desc": "list all available packages"
  },
  "edit": {
    "desc": "create or edit a package definition",
    "options": {
      "wizard": true,
      "params": {
        "optional": "packageName"
      }
    }
  },
  "make": {
    "desc":"make all or only the specified package",
    "options": {
      "params": {
        "optional": "packageName..."
      }
    }
  },
  "install": {
    "desc": "install the package",
    "options": {
      "params": {
        "optional": "packageRef..."
      }
    }
  },
  "build": {
    "desc": "compile a source package",
    "options": {
      "params": {
        "optional": "packageRef..."
      }
    }
  },
  "remove": {
    "desc": "remove the package",
    "options": {
      "params": {
        "optional": "packageRef..."
      }
    }
  },
  "clean": {
    "desc":"remove the devroot, the repository and the packages"
  }
}
